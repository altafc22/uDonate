<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SplashActivity"
    android:background="@drawable/bg_vector"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:lottie_autoPlay="true"
            android:id="@+id/christmas_lights"
            app:lottie_fileName="christmas_ornaments_two.json"
            app:lottie_loop="true" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="christmas_ornaments_two.json"
            app:lottie_loop="true" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_marginTop="-20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:lottie_autoPlay="true"
            android:layout_marginLeft="-70dp"
            app:lottie_fileName="christmas_ornaments_two.json"
            app:lottie_loop="true" />

    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginBottom="-35dp"
        android:layout_marginRight="-30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:lottie_autoPlay="true"
        android:id="@+id/anim_view"
        app:lottie_fileName="snow_man_two.json"
        app:lottie_loop="true" />

  <!--  <com.airbnb.lottie.LottieAnimationView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="-20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="christmas_bells.json"
        app:lottie_loop="true" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:tint="@color/colorGolden"
            android:id="@+id/logo"
            android:src="@drawable/logo_og"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="180dp"
            android:text="Let's Donate"
            android:onClick="gotoNextActivity"
            style="@style/myButton"/>

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/rounded_border"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:backgroundTint="@color/colorGreen"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="30"
            android:id="@+id/tv_donate_count"
            android:textColor="@color/color_white"
            android:lineSpacingExtra="-9dp"
            android:textSize="35sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Donation\nCount"
            android:textAlignment="center"
            android:lineSpacingExtra="-9dp"
            android:layout_marginTop="-15dp"
            android:textColor="@color/color_white"
            android:textSize="15sp"/>

    </LinearLayout>



</RelativeLayout>