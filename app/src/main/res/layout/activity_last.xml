<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LastActivity"
    android:background="@drawable/bg_vector"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/anim_layout">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:lottie_autoPlay="true"
            android:id="@+id/christmas_lights"
            app:lottie_fileName="christmas_ornaments_two.json"
            app:lottie_loop="true" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="christmas_ornaments_two.json"
            app:lottie_loop="true" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_marginTop="-20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:lottie_autoPlay="true"
            android:layout_marginLeft="-70dp"
            app:lottie_fileName="christmas_ornaments_two.json"
            app:lottie_loop="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="-30dp"
        android:layout_below="@+id/anim_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_height="180dp"
            android:src="@drawable/christmas_greeting"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:tint="@color/colorGolden"
            android:src="@drawable/logo_og"
            android:id="@+id/logo"
            android:layout_marginTop="30dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:lottie_autoPlay="true"
                app:lottie_fileName="happy_tree.json"
                app:lottie_loop="true" />

            <Button
                android:layout_width="400dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:text="Thank You"
                android:onClick="gotoPreviousActivity"
                style="@style/myButton"/>


    </LinearLayout>



</RelativeLayout>